{
  "name": "genieration-electron",
  "version": "1.0.0",
  "description": "Générateur de données JSON de test moderne - Interface Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "author": {
    "name": "Genieration Team",
    "email": "contact@genieration.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "fs-extra": "^11.0.0"
  },
  "build": {
    "appId": "com.genieration.json-generator",
    "productName": "Genieration JSON Generator",
    "copyright": "Copyright © 2025 Genieration Team",
    "icon": "assets/icon.ico",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*",
      "!node_modules/**/*",
      "node_modules/fs-extra/**/*",
      "node_modules/universalify/**/*",
      "node_modules/graceful-fs/**/*",
      "node_modules/jsonfile/**/*"
    ],
    "extraResources": [
      {
        "from": "../src",
        "to": "src",
        "filter": ["**/*"]
      },
      {
        "from": "../examples",
        "to": "examples",
        "filter": ["**/*"]
      },
      {
        "from": "../requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "../LICENSE",
        "to": "LICENSE"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "Genieration-Setup-${version}.${ext}",
      "publisherName": "Genieration Team",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Genieration JSON Generator",
      "artifactName": "Genieration-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": false
    }
  }
} 